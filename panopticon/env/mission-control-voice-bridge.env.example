# Mission Control Voice ROS Bridge (optional profile: voice)
# Bridge posts to ${MC_API_URL}/v1/events using MC_AUTH_TOKEN (if enabled).

MC_API_URL=http://mission-control-api:9090

# Optional auth. Keep empty if mission-control-api has no MC_AUTH_TOKEN.
MC_AUTH_TOKEN=

# Event identity
MC_VOICE_AGENT=voice-engine

# ROS topics from yahboom largemodel
MC_VOICE_TOPIC_WAKEUP=wakeup
MC_VOICE_TOPIC_ASR=asr
MC_VOICE_TOPIC_TEXT_RESPONSE=text_response
MC_VOICE_TOPIC_TTS=tts_topic

# Bridge behavior
MC_VOICE_ENABLE_LLM_FIRST_TOKEN=1
MC_VOICE_IDLE_AFTER_TTS_S=6
MC_VOICE_BRIDGE_QUEUE_SIZE=2000
MC_VOICE_BRIDGE_MAX_ATTEMPTS=8
MC_VOICE_BRIDGE_MAX_EVENT_AGE_S=120
MC_VOICE_BRIDGE_BACKOFF_BASE_S=0.2
MC_VOICE_BRIDGE_BACKOFF_CAP_S=5
MC_VOICE_BRIDGE_EVENTKEY_TTL_S=600
MC_VOICE_BRIDGE_EVENTKEY_MAX=10000
MC_VOICE_BRIDGE_LOG_PAYLOAD=0
